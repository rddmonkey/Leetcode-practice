class Solution:
    def reverseOnlyLetters(self, s: str) -> str:
        slist = []

        for x in s:
            slist.append(x)

        start = 0
        end  = len(s) - 1

        while start < end:
            if slist[start].isalpha() and slist[end].isalpha():
                slist[start], slist[end] = slist[end], slist[start]
                start +=1
                end-=1
                continue
            if slist[start].isalpha() == False:
                start +=1
            if slist[end].isalpha() == False:
                end-=1

        return "".join(slist)
