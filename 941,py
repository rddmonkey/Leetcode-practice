class Solution:
    def validMountainArray(self, arr) -> bool:

        start = 0

        if len(arr) < 3:
            return False
        
        if arr[0] > arr[1]:
            return False

        while start != len(arr):
            if start == len(arr) - 1:
                print(start)
                return False
            if arr[start] < arr[start+1]:
                start += 1
            else:
                break

        while start != len(arr)-1:
            if arr[start] > arr[start+1]:
                start += 1
            else:
                return False

        return True
