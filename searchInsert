class Solution:
    def searchInsert(self, nums, target: int) -> int:

        if target in nums:
            return nums.index(target)

        if len(nums) == 1:
            nums.append(target)
            nums.sort()
            return nums.index(target)

        else:
            if abs(target - nums[-1]) > abs(target - nums[0]):
                for x in range(len(nums)):
                    if nums[x] < target:
                        pass
                    if nums[x] > target:
                        return x

            else:
                for x in range(len(nums)-1,-1,-1):
                    if nums[x] > target:
                        pass
                    if nums[x] < target:
                        return x+1
